        <Grid.RowDefinitions>
            <RowDefinition Height="137*"/>
            <RowDefinition Height="297*"/>
        </Grid.RowDefinitions>
        <Label x:Name="id" Content="   id:" HorizontalAlignment="Left" Margin="178,97,0,0" VerticalAlignment="Top" Width="164" Height="42" FontFamily="Gabriola" FontSize="24" Grid.RowSpan="2"/>
        <Label x:Name="weight" Content="max weight:" HorizontalAlignment="Left" Margin="178,46,0,0" VerticalAlignment="Top" Width="164" Height="42" FontFamily="Gabriola" FontSize="24" Grid.Row="1"/>
        <Label x:Name="model" Content="model:" HorizontalAlignment="Left" Margin="183,3,0,0" VerticalAlignment="Top" Width="164" Height="42" FontFamily="Gabriola" FontSize="24" Grid.Row="1"/>
        <Label x:Name="battery" Content="battery:" HorizontalAlignment="Left" Margin="178,88,0,0" VerticalAlignment="Top" Width="164" Height="42" FontFamily="Gabriola" FontSize="24" Grid.Row="1"/>
        <Label x:Name="condition" Content="condition:" HorizontalAlignment="Left" Margin="178,129,0,0" VerticalAlignment="Top" Width="164" Height="42" FontFamily="Gabriola" FontSize="24" Grid.Row="1"/>
        <Label x:Name="latitude" Content="latitude:" HorizontalAlignment="Left" Margin="178,168,0,0" VerticalAlignment="Top" Width="164" Height="42" FontFamily="Gabriola" FontSize="24" Grid.Row="1"/>
        <Label x:Name="longtitude" Content="longtitude:" HorizontalAlignment="Left" Margin="178,207,0,0" VerticalAlignment="Top" Width="164" Height="42" FontFamily="Gabriola" FontSize="24" Grid.Row="1"/>
        <TextBox x:Name="idTextBox" Text="" TextWrapping="Wrap" Margin="347,80,273,8" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" TextChanged="idTextBox_TextChanged" Background="White"/>
        <TextBox x:Name="modelTextBox" Text="" TextWrapping="Wrap" Margin="347,136,273,249" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.RowSpan="2"/>
        <TextBox x:Name="BatteryStatusTextBox" Text="" TextWrapping="Wrap" Margin="347,91,273,171" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row="1"/>
        <TextBox x:Name="conditionTextBox" Text="" TextWrapping="Wrap" Margin="347,132,273,130" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row="1"/>
        <TextBox x:Name="latitudeTextBox" Text="" TextWrapping="Wrap" Margin="347,171,273,91" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row="1"/>
        <TextBox x:Name="longtitudeTextBox" Text="" TextWrapping="Wrap" Margin="347,210,273,52" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Row="1"/>
        <Button x:Name="AddBottun" Content="Add" HorizontalAlignment="Center" Margin="0,258,0,0" VerticalAlignment="Top" Height="31" Width="130" Click="AddBottun_Click" Grid.Row="1"/>
        <Button x:Name="Button1" Content="update drone" HorizontalAlignment="Left" Margin="627,259,0,0" VerticalAlignment="Top" Height="31" Width="162" Click="Button1_Click" Grid.Row="1"/>
        <Label x:Name="StationId" Content="Station Id:" HorizontalAlignment="Left" Margin="585,49,0,0" VerticalAlignment="Top" Width="164" Height="42" FontFamily="Arial Black" FontSize="24" Visibility="Hidden"/>

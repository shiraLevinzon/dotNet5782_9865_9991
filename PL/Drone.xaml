        <Button x:Name="CancelAddBottun" Content="Cancel" HorizontalAlignment="Left" Margin="466,258,0,0" VerticalAlignment="Top" Height="32" Width="153" Click="CancelAddBottun_Click" Grid.Row="1"/>
        <ComboBox x:Name="weightComboBox" HorizontalAlignment="Left" Margin="347,54,0,0" VerticalAlignment="Top" Width="169" Height="32" Grid.Row="1"/>
        <Button x:Name="Button2" Content="Button" HorizontalAlignment="Left" Margin="61,-150,0,0" VerticalAlignment="Top" Height="27" Width="142" RenderTransformOrigin="0.528,8.207" Click="Button2_Click" Grid.Column="1"/>
        <Button x:Name="Button3" Content="Button" HorizontalAlignment="Left" Margin="61,-17,0,0" VerticalAlignment="Top" Height="25" Width="142" Grid.Column="1"/>
        <Label x:Name="taital" Content="Enter the Drone details :" HorizontalAlignment="Left" Margin="74,25,0,0" VerticalAlignment="Top" Width="442" Height="52" FontWeight="Bold" FontSize="24" FontFamily="Gabriola"/>




    </Grid>

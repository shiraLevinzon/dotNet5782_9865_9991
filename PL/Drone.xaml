<Window x:Class="PL.Drone"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Drone" Height="450" Width="800">
    <Grid>
        <Label x:Name="id" Content="id:" HorizontalAlignment="Left" Margin="63,34,0,0" VerticalAlignment="Top" Width="164" Height="42" FontFamily="Arial Black" FontSize="24"/>
        <Label x:Name="weight" Content="max weight:" HorizontalAlignment="Left" Margin="63,128,0,0" VerticalAlignment="Top" Width="185" Height="42" FontFamily="Arial Black" FontSize="24"/>
        <Label x:Name="model" Content="model:" HorizontalAlignment="Left" Margin="63,81,0,0" VerticalAlignment="Top" Width="164" Height="42" FontFamily="Arial Black" FontSize="24"/>
        <Label x:Name="battery" Content="battery:" HorizontalAlignment="Left" Margin="63,175,0,0" VerticalAlignment="Top" Width="164" Height="42" FontFamily="Arial Black" FontSize="24"/>
        <Label x:Name="condition" Content="condition:" HorizontalAlignment="Left" Margin="63,222,0,0" VerticalAlignment="Top" Width="164" Height="42" FontFamily="Arial Black" FontSize="24"/>
        <Label x:Name="latitude" Content="latitude:" HorizontalAlignment="Left" Margin="63,269,0,0" VerticalAlignment="Top" Width="164" Height="42" FontFamily="Arial Black" FontSize="24"/>
        <Label x:Name="longtitude" Content="longtitude:" HorizontalAlignment="Left" Margin="63,311,0,0" VerticalAlignment="Top" Width="164" Height="42" FontFamily="Arial Black" FontSize="24"/>
        <TextBox x:Name="idTextBox" Text="" TextWrapping="Wrap" Margin="347,34,284,358" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" TextChanged="idTextBox_TextChanged"/>
        <TextBox x:Name="modelTextBox" Text="" TextWrapping="Wrap" Margin="347,81,284,311" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="BatteryStatusTextBox" Text="" TextWrapping="Wrap" Margin="347,175,284,217" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="conditionTextBox" Text="" TextWrapping="Wrap" Margin="347,222,284,170" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="latitudeTextBox" Text="" TextWrapping="Wrap" Margin="347,269,284,123" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="longtitudeTextBox" Text="" TextWrapping="Wrap" Margin="347,316,284,76" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Button x:Name="AddBottun" Content="Add" HorizontalAlignment="Left" Margin="252,376,0,0" VerticalAlignment="Top" Height="31" Width="130" Click="AddBottun_Click"/>
        <Button x:Name="Button1" Content="update drone" HorizontalAlignment="Left" Margin="585,377,0,0" VerticalAlignment="Top" Height="31" Width="162" Click="Button1_Click"/>
        <Label x:Name="StationId" Content="Station Id:" HorizontalAlignment="Left" Margin="585,49,0,0" VerticalAlignment="Top" Width="164" Height="42" FontFamily="Arial Black" FontSize="24" Visibility="Hidden"/>
        <ComboBox x:Name="StationIdComboBox" HorizontalAlignment="Left" Margin="607,128,0,0" VerticalAlignment="Top" Width="120" Visibility="Hidden"/>
        <Button x:Name="CancelAddBottun" Content="Cancel" HorizontalAlignment="Left" Margin="400,376,0,0" VerticalAlignment="Top" Height="32" Width="153" Click="CancelAddBottun_Click"/>
        <ComboBox x:Name="weightComboBox" HorizontalAlignment="Left" Margin="347,134,0,0" VerticalAlignment="Top" Width="169" Height="32"/>
        <Button x:Name="Button2" Content="Button" HorizontalAlignment="Left" Margin="607,216,0,0" VerticalAlignment="Top" Height="27" Width="142" RenderTransformOrigin="0.528,8.207" Click="Button2_Click"/>
        <Button x:Name="Button3" Content="Button" HorizontalAlignment="Left" Margin="607,252,0,0" VerticalAlignment="Top" Height="25" Width="142"/>




    </Grid>
</Window>

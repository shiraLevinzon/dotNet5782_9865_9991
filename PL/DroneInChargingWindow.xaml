<Window x:Class="PL.DroneInChargingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="DroneInChargingWindow" Height="450" Width="466">
    <Grid Margin="0,0,304,0">
        <ListView Name="listOfDroneInCharge"
  ItemsSource="{Binding Items1}" Height="424" VerticalAlignment="Top" Margin="0,10,-305,0" RenderTransformOrigin="1.078,0.206">
            <ListView.View>
                <GridView>
                    <GridViewColumn
        DisplayMemberBinding="{Binding ID}"
        Header="Drone ID" />
                    <GridViewColumn
        DisplayMemberBinding="{Binding BatteryStatus}"
        Header="Battery left" />

                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
